<header>
  <nav class="navbar navbar-expand-lg ">
    <div class="container-fluid d-flex">
      <div class="navbar-nav mb-2 mb-lg-0">
        <a class="navbar-brand" href="<%= root_path %>">The Gossip Project</a>
      </div>
      <div class="navbar-nav w-50 flex-row me-auto mb-2 mb-lg-0">
        <div class="nav-item mx-2">
          <%= link_to 'Contacts', contacts_path, class:'nav-link' %>
        </div>
        <div class="nav-item mx-2">
          <%= link_to 'Team', team_path, class:'nav-link' %>
        </div>
        <% if current_user %>
          <div class="nav-item mx-2">
            <%= button_to 'Log out', session_path(session.id) , method: :delete, class:'btn btn-link nav-link' %>
          </div>
          <div class="nav-item mx-2">
            <%= link_to 'Profile', user_path(current_user), class:'nav-link' %>
          </div>
        <% else %>
          <div class="nav-item mx-2">
            <%= link_to 'Create account', new_user_path, class:'nav-link' %>
          </div>
          <div class="nav-item mx-2">
            <%= link_to 'Log in', new_session_path, class:'nav-link' %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>

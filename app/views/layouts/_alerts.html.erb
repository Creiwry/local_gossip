<% if flash != nil %>
    <% flash.each do |type, message| %>
      <% if type == "notice" %>
          <div class="header-alert alert alert-success alert-dismissible" role="alert">
      <% elsif type == "alert" || type == "error" %>
          <div class="header-alert alert alert-danger alert-dismissible" role="alert">
      <% elsif type == "warning" %>
          <div class="header-alert alert alert-warning alert-dismissible" role="alert">
      <% else %>
          <div class="header-alert alert alert-info alert-dismissible" role="alert">
      <% end %>
            <%=message%> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
    <% end %>
<% end %>

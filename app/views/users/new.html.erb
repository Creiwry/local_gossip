<div class="container text-dark card p-3 <%= ['card-bg-1', 'card-bg-2', 'card-bg-3', 'card-bg-4', 'card-bg-5'].sample %>">

  <h1>Register:</h1>
  <%= form_with(model: @user, url: users_path, method: :post) do |form| %>
    <div class="mb-3">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control"  %>
    </div>
    <div class="mb-3">
      <%= form.label :age %>
      <%= form.text_field :age, class: "form-control"  %>
    </div>
    <div class="mb-3">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control"  %>
    </div>
    <div class="mb-3">
      <%= form.label :city_id %>
      <%= form.select :city_id, @cities.collect {|u| [u.name, u.id]}, {prompt: "Select your city"}, {class: "form-select form-select-lg"} %>
    </div>
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control"  %>
    </div>
    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control"  %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control"  %>
    </div>
    <%= form.submit class:"btn btn-dark" %>
  <% end %>
  
</div>

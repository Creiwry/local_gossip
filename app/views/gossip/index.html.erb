  
  <div class="d-flex flex-column justify-content-evenly">
    <div class="d-flex justify-content-center">
      <h1>All Gossip</h1>
    </div>
    <div class="d-flex flex-wrap justify-content-evenly">
      <% color_options = ['card-bg-1', 'card-bg-2', 'card-bg-3'] %>
      <% @gossips.each_with_index do |gossip, index| %>
        <div class="p-5 m-2 card <%= color_options[index % color_options.length] %>" style="width: 18rem;" >
          <div class="card-body">
            <div class="d-flex justify-content-center">
              <div>
                <h5 class="card-title"><%= gossip.title %></h5>
                <p class="card-text">By: <%= gossip.user.first_name %> <%= gossip.user.last_name %></p>
              </div>
            </div>
            <div class="d-flex flex-row justify-content-evenly pt-5">
              <%= link_to 'Go to gossip', gossip_path(id: gossip.id), class:'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
    <!-- <a href="/gossips/new">Add new gossip</a> -->
  </div>
